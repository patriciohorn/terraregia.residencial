---
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
import InversionCover from '@/assets/inversion-cover.png'
import InversionSecondary from '@/assets/inversion-secondary.png'
import {InversionAccordion} from '@/components/inversion-accordion'
import MoreInfo from "@/components/MoreInfo.astro";
---

<Layout title="Inversión">
  <section class="pt-10 pb-16 flex flex-col ">
    <div class="container">
      <section>
        <div class="flex flex-col gap-9">
          <h1 class="text-6xl leding-[1.1] text-black font-heading">Invierte en propiedades de Alta Plusvalía en Dominio Cumbres y Valle Condesa</h1>
          <p class="text-[28px] leading-9 text-neutral-700">Invierte hoy en casas y terrenos residenciales, asegura tu patrimonio y haz crecer tu futuro en las mejores ubicaciones. ¡Tu mejor decisión empieza aquí! </p>
        </div>
        <div class="mt-8 overflow-hidden rounded-md shadow-sm">
          <Image src={InversionCover} alt="Proyecto Inversiones" format="webp" class="w-full h-full object-cover"/>
        </div>
      </section>
      <section class="mt-16">
        <div class="grid sm:grid-cols-[2fr_3fr] gap-20">
          <div>
            <h2 class="font-heading text-[44px] leading-[1.1]">Selecciona la mejor opción para ti.</h2>
            <div class="mt-6 rounded-md overflow-hidden shadow-sm">
              <Image src={InversionSecondary} alt="Proyecyo terra regia" format="webp" class="w-full h-full object-cover"/>
            </div>            
          </div>
          <div class="mt-16">
            <InversionAccordion client:load/>            
          </div>
        </div>
      </section>        
    </div>      
  </section>
  <MoreInfo/> 
</Layout>