---
import Image from 'astro/components/Image.astro';
import showroomImage from '@/assets/showroom-tr.jpg';
import '../../../styles/globals.css';
import { EventForm } from '@/components/EventForm';
import { Clock, MapPin } from 'lucide-react';
import { GranVentaCarousel } from '@/components/GranVentaCarousel';
import LogoMarquee from '@/components/LogoMarquee.astro';
---

<!doctype html>
<html lang="es-MX">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Encuentra tu espacio ideal para vivir. En ubicaciones con plusvalía en Nuevo León"
    />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon-16x16.png"
    />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />

    <title>Terra Regia Residencial | Gran Venta</title>
  </head>
  <body
    class="bg-[#F5F5F5] text-neutral-600 font-sans overflow-x-hidden">
    <main>
      <!-- Hero -->
      <section class="relative lg:h-dvh w-full overflow-hidden">
        <video
          class="absolute w-full h-full top-0 left-0 object-fit lg:object-cover"
          autoplay
          muted
          loop
          playsinline
          preload="metadata">
          <source src="./gran-venta-nuevo.mp4" type="video/mp4" />
          Tu navegador no soporta videos
        </video>
      </section>
      <!-- Intro -->
      <section class="py-8 lg:pt-28 mb-12 px-5">
        <div class="max-w-3xl mx-auto">
          <div
            class="flex flex-col gap-y-6 items-center justify-center text-center">
            <h1
              class="text-3xl lg:text-6xl lg:leading-[1.1] tracking-wide text-neutral-900 font-semibold">
              Regístrate antes del 28 Noviembre y separa tu lote
            </h1>
            <p class="text-lg lg:text-xl">
              Descubre nuestros desarrollos residenciales ideales para
              vivir o invertir
            </p>
          </div>
        </div>
      </section>
      <!-- Form -->
      <section class="mb-16 lg:mb-28 px-5">
        <div class="container mx-auto">
          <EventForm client:visible />
        </div>
      </section>
      <!-- CTA -->
      <section class="px-5 lg:px-10 mx-auto mb-16">
        <div
          class="bg-neutral-900 flex flex-col items-center justify-center text-center rounded-md py-28">
          <h2
            class="text-3xl lg:text-6xl text-white mb-6 font-medium">
            Conoce Nuestros Desarrollos
          </h2>
          <p class="text-lg lg:text-xl text-neutral-100 mb-12">
            Encuentra el lugar ideal para vivir o invertir
          </p>
          <LogoMarquee />
        </div>
      </section>
      <!-- Showroom -->
      <section class="py-8 lg:py-16">
        <div class="max-w-7xl mx-auto px-5 lg:px-0">
          <div class="rounded-md overflow-hidden shadow-md">
            <div class="grid lg:grid-cols-3 text-neutral-700">
              <!-- Card -->
              <div class="order-2 lg:order-1">
                <!-- Image -->
                <div class="aspect-video">
                  <Image
                    src={showroomImage.src}
                    alt="Showroom de Terra Regia"
                    inferSize
                    class="object-cover object-center h-full w-full"
                  />
                </div>
                <!-- Content -->
                <div
                  class="px-6 py-6 flex flex-col items-stretch bg-white">
                  <h2 class="text-neutral-900 text-xl mb-4">
                    Showroom | Experiencia Terra Regia
                  </h2>
                  <div>
                    <!-- Location -->
                    <div class="flex gap-x-4 group py-4">
                      <MapPin
                        className="w-4 h-4 shrink-0 mt-1.5 text-black"
                        size={16}
                        strokeWidth={1}
                      />
                      <a
                        class="group-hover:text-neutral-900 group-hover:underline transition-all duration-300 ease-in"
                        href="https://maps.app.goo.gl/rHhAi439YHX4BkPZ7 "
                        target="_blank">
                        Blvd. Rogelio Cantú Gómez 201, Colinas de San
                        Jerónimo, 64630 Monterrey, N.L
                      </a>
                    </div>

                    <!-- <div class="flex gap-x-4 py-4">
                      <Clock
                        size={16}
                        strokeWidth={1}
                        className="w-4 h-4 shrink-0 mt-1.5 text-black">
                        <div class="space-y-1">
                          <p class="font-medium">Horario</p>
                          <p>06:00 AM - 08:00 PM</p>
                          <p>Viernes - Sábado</p>
                        </div>
                      </Clock>
                    </div> -->
                  </div>
                </div>
              </div>

              <!-- Map -->
              <div
                class="col-span-1 lg:col-span-2 aspect-[4/3] order-1 lg:order-2">
                <iframe
                  class="object-cover object-center w-full h-full"
                  src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4423.853181034737!2d-100.3788637!3d25.695865299999998!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x86629700739b7f49%3A0x6c2ade5dbfbd94bb!2sShowroom%20%7C%20Experiencia%20Terra%20Regia!5e1!3m2!1ses-419!2smx!4v1762754306598!5m2!1ses-419!2smx"
                  width="600"
                  height="450"
                  style="border:0;"
                  allowfullscreen=""
                  loading="lazy"
                  referrerpolicy="no-referrer-when-downgrade"
                ></iframe>
              </div>
            </div>
          </div>
        </div>
      </section>
      <section class="py-16 lg:py-28 px-5 lg:px-0">
        <GranVentaCarousel client:visible />
      </section>
    </main>
  </body>
</html>
