---
import Amenity from "./Amenity.astro"
interface AmenityItem {
  icon: string,
  label: string
}
const {amenities} = Astro.props
---

<div class="bg-black rounded-md p-4 sm:px-7">
  <ul class="grid grid-cols-2 gap-x-6 gap-y-1 sm:gap-x-14 sm:gap-y-2">
    {amenities.map((amenity: AmenityItem) => (
      <Amenity name={amenity.icon} label={amenity.label}/>
    ))}
  </ul>

</div>

