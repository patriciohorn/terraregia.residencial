---
import Amenity from './Amenity.astro';
interface AmenityItem {
  icon: string;
  label: string;
}
const { amenities } = Astro.props;
---

<div class="bg-black rounded-md p-4 sm:px-7 sm:py-7 h-full flex flex-col justify-center">
  <h3 class="text-white text-xl font-medium mb-6">Amenidades</h3>
  <ul class="grid grid-cols-2 items-center gap-x-6 gap-y-2 sm:gap-x-14">
    {amenities.map((amenity: AmenityItem) => <Amenity name={amenity.icon} label={amenity.label} />)}
  </ul>
</div>
