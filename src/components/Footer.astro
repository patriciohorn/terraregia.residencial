---
import { getCollection } from 'astro:content';

const allProjectPosts = await getCollection("project");

const dominioCumbres = allProjectPosts.filter((project) => project.data.location === 'Dominio Cumbres').map((project) => project.data.title)
const valleCondesa = allProjectPosts.filter((project) => project.data.location === 'Valle Condesa').map((project) => project.data.title)
const apodaca = allProjectPosts.filter((project) => project.data.location === 'Apodaca').map((project) => project.data.title)
const salinasVictoria = allProjectPosts.filter((project) => project.data.location === 'Salinas Victoria').map((project) => project.data.title)
