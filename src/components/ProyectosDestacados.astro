---
import LeftHeading from './LeftHeading.astro';
import ProjectCard from './ProjectCard.astro';
const { projects } = Astro.props;
---

<section class="py-20">
  <div class="container">
    <LeftHeading title="Proyectos Destacados" />
    <div class="mt-8 sm:mt-12 grid md:grid-cols-2 lg:grid-cols-3 gap-x-10 gap-y-8">
      {projects.map((project: any) => <ProjectCard project={project} small={true} badge={true} />)}
    </div>
  </div>
</section>
