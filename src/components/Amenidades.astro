---
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro';
const { blok } = Astro.props;
---

<div
  class="bg-black rounded-sm p-4 sm:px-7 sm:py-7 h-full flex flex-col justify-center">
  <h3 class="text-white text-xl font-medium mb-6">Amenidades</h3>
  <ul
    class="grid grid-cols-2 items-center gap-x-6 gap-y-2 sm:gap-x-14">
    {
      blok?.map((amenidad: any) => {
        return <StoryblokComponent blok={amenidad} />;
      })
    }
  </ul>
</div>
