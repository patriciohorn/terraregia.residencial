---
import {Link} from '@/components/link'
import {cn, sluglify} from '@/lib/utils'
const {name = "Todos",  activeCategory} = Astro.props
const currentPath = Astro.url.pathname
const unsluglifyNameCategory = sluglify(name.toLowerCase())
const isActive = activeCategory?.toLowerCase() === unsluglifyNameCategory || (currentPath === '/ubicacion/' && name === 'Todos')

---


<Link href={name === 'Todos' ? '/ubicacion/' : sluglify(`/ubicacion/${unsluglifyNameCategory}`)} variant="invertedOutline" className={cn(`h-8 px-4 py-2 text-sm s border border-white bg-transparent text-white sm:h-12 sm:px-6 sm:py-3 sm:w-44 sm:text-base`, isActive && `bg-white text-black border border-white`)}>{name}</Link>