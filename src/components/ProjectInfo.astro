---
import { BellRing} from "lucide-react"

const {project} = Astro.props
const formatedCosto = project.data.costo.split(' ')
const twoLevelProjects = ['Toscana Residencial', 'Rincón de la Sierra']
---

<div class="flex flex-col bg-[#D9D9D9] rounded-md p-4 sm:px-7 sm:py-7 shadow-sm relative">
  <div class=" flex flex-col">
    {project.data.promotion && (
      <div class="flex ml-auto gap-2  items-center text-accent-dark font-medium bg-[#e9f5f5] w-fit px-3 py-1.5 border border-accent-dark rounded-full">
        <BellRing size="16" className="text-accent-dark h-3.5 w-3.5 fill-accent-dark"/>    
        <p class="text-sm font-medium">{project.data.promotion}</p>      
      </div>
    )}

    <div class="relative mt-6 sm:mt-0">
      {project.data.title !== 'Reserva del Mezquital' ?   (    
      <span class="absolute -top-2.5 left-0 text-sm sm:text-base font-medium text-[#545454]">{formatedCosto[0]}</span>
      <p class="mt-4 text-4xl sm:text-5xl font-heading">{formatedCosto[1]}</p>
     
    ) : <p class="text-4xl sm:text-5xl font-heading">Próximamente</p>}   
      
    {twoLevelProjects.includes(project.data.title) ? <p class="text-xl font-medium mt-2 sm:mt-6 text-[#363636] tracking-[0.01em] text-balance">Casas de 2 y 3 niveles con 3 recámaras
      </p> : project.data.tipo === 'Terrenos' ? <p class="text-xl leading-6 font-medium mt-4 text-[#363636] tracking-[0.01em] text-balance">{ `${project.data.tipo} Residenciales en ${project.data.location}` }</p> : <p class="text-xl leading-6 font-medium mt-4 text-[#363636] tracking-[0.01em]">{ `${project.data.tipo} en ${project.data.location}` }</p>}

    </div>
    

  
     <p class="mt-4 text-xs font-medium text-[#7b7b7b]">* Precios sujetos a cambio sin previo aviso. Sujetos a disponibilidad</p>
  </div>
  
</div>
