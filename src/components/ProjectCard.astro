---
import { Image } from 'astro:assets';
import { MapPin } from 'lucide-react';
import { Badge } from './ui/badge';
import { cn } from '@/lib/utils';
import { Button } from '@/components/ui/button';

const { project, badge, showPreventaBadge, small } = Astro.props;
---

<article
  id={project.slug}
  class="group relative before:absolute before:-inset-4 before:-z-10 before:shadow-sm before:rounded-[36px] before:bg-card-foreground/45 before:opacity-0 hover:before:opacity-100 transition-all duration-200 ease-in-out">
  <div class="aspect-[3/2] rounded-md overflow-hidden shadow-sm relative group">
    <Image
      src={project.data.cover}
      alt={project.data.title}
      inferSize={true}
      class="w-full h-full object-cover transition-transform duration-500 ease-out group-hover:transform group-hover:translate3d(0, 0, 0) group-hover:scale-105 group-hover:rotateX(0deg) group-hover:rotateY(0deg)"
      style={{ transformStyle: 'preserve-3d' }}
    />

    {
      badge && !small ? (
        <>
          {showPreventaBadge && (
            <Badge
              variant="invertedOutline"
              className="absolute top-7 left-32 h-8 justify-center font-medium z-10 tracking-[0.01em] opacity-0 transition-opacity duration-300 ease-in-out group-hover:opacity-100 text-sm">
              Precio de Preventa
            </Badge>
          )}

          <Badge
            variant="invertedOutline"
            className="absolute top-4 sm:top-7 h-8 left-4 justify-center font-medium z-10 tracking-[0.01em] text-sm min-w-[106px]">
            {project.data.tipo}
          </Badge>

          <Badge className="absolute top-4 sm:top-7 right-4 h-8 justify-center font-medium z-10 tracking-[0.01em] text-sm lg:text-base">
            {project.data.costo}
          </Badge>
        </>
      ) : (
        <>
          <Badge
            variant="invertedOutline"
            className="absolute top-4 h-8 left-4 justify-center font-medium z-10 tracking-[0.01em] text-sm min-w-[106px]">
            {project.data.tipo}
          </Badge>
        </>
      )
    }
  </div>
  <div class="mt-4 flex flex-row justify-between items-center">
    <div class="flex flex-col gap-y-1">
      <h3 class="text-xl sm:text-2xl font-heading tracking-[0.01em]">{project.data.title}</h3>
      <div class="flex gap-1 items-center text-[#827D7D]">
        <MapPin className="h-4 w-auto" />
        <p class="text-sm font-medium">{project.data.location}</p>
      </div>
    </div>

    {
      small ? (
        <Button
          variant="outline"
          className="cursor-pointer h-10 sm:h-10 group-hover:bg-black group-hover:text-white">
          Ver más
        </Button>
      ) : (
        <Button
          variant="outline"
          className="cursor-pointer h-10 sm:h-12 sm:w-[140px] group-hover:bg-black group-hover:text-white">
          Ver más
        </Button>
      )
    }
  </div>
  <a href={`/proyectos/${project.slug}`}>
    <span class="absolute z-10 -inset-4"></span>
  </a>
</article>
