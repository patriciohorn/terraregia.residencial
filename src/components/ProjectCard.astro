---
import { Image } from 'astro:assets';
import { MapPin } from 'lucide-react';
const {project} = Astro.props
---

<article id={project.slug}>
	<div class="aspect-[3/2] rounded-md overflow-hidden shadow-sm  ">
		<Image src={project.data.cover} alt={project.data.title} inferSize={true} class="w-full h-full object-cover  transition-all hover:scale-110 duration-500 ease-in"/> 
	</div>
	<div class="mt-4 space-y-1">
		<h3 class="text-2xl font-heading tracking-wide">{project.data.title}</h3>
		<div class="flex gap-1 items-center text-[#827D7D]">
			<MapPin className="h-4 w-auto" />
			<p class="text-sm font-medium">{project.data.location}</p>
		</div>
	</div>
</article>