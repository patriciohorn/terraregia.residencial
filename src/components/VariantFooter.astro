---
import { Link } from './link';
import { CloudDownload } from 'lucide-react';
const { items, brochure } = Astro.props;
const titles = ['Frente', 'Fondo', '√Årea'];
---

<div
  class="mt-4 flex flex-wrap items-center w-full justify-center sm:justify-center gap-y-6 gap-x-8 sm:max-w-sm sm:mx-auto">
  <div class="flex items-center gap-x-8 justify-between">
    {
      items.map((item: string, idx: number) => (
        <div class="flex flex-col gap-1 items-center">
          <h3 class="text-xs text-center sm:text-base font-medium">
            {titles[idx]}
          </h3>
          <p class="text-base text-neutral-600">{item}</p>
        </div>
      ))
    }
  </div>
  {
    brochure && (
      <Link
        href={brochure}
        target="_blank"
        variant="default"
        className="flex items-center gap-2 text-sm w-fit ">
        <CloudDownload className="w-4 h-4" />
        <span>Brochure</span>
      </Link>
    )
  }
</div>
