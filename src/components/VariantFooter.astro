---
import { Link } from './link';
import { CloudDownload } from 'lucide-react';
const {items, brochure} = Astro.props

---

<div class="flex items-center justify-center max-w-sm mx-auto">
  <div class="flex items-center gap-x-8 justify-between">
    {items.map((item: string) => (
      <div class="flex flex-col gap-2 items-center">
        <h3 class="text-xs text-center sm:text-base font-medium">{item.split(':')[0]}</h3>
        <p class="text-base text-neutral-600">{item.split(':')[1]}</p>
      </div>
    ))}
  </div>
  {brochure && (
    <Link 
    href={brochure}
    target="_blank"
    variant="default"
    className="flex items-center gap-2 text-sm w-fit ">
    <CloudDownload className="w-4 h-4" />
    <span>Brochure</span>
  </Link>
  )}
</div>