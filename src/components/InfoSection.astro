---
import data from '@/data/site.json';
import { Button } from './ui/button';
import { ArrowUpRight } from 'lucide-react';
import { cn } from '@/lib/utils';
---

<section class="py-8 sm:py-24">
  <div class="container">
    <div class="grid sm:grid-cols-2 gap-y-4 gap-x-20">
      <div>
        <div>
          <h2 class="text-3xl sm:text-5xl font-heading">
            {data.about.title}
          </h2>
          <p class="mt-4 text-lg sm:mt-6 text-[#7f7f7f] max-w-prose">
            {data.about.description[0]}<span class="font-medium">
              {data.about.description[1]}</span
            >{data.about.description[2]}
          </p>
        </div>
        <a class="flex group mt-6 sm:hidden" href="https://terraregia.com/" target="_blank">
          <Button
            className="bg-[#D9D9D9] text-black group-hover:text-white group-hover:bg-black text-base font-medium">
            Conoce más de Terra Regia
          </Button>
          <Button size={'icon'} className="bg-[#D9D9D9]  group-hover:bg-black">
            <ArrowUpRight className="text-black group-hover:text-white " />
          </Button>
        </a>
      </div>
      <ul class="flex justify-between items-center gap-x-6 gap-y-6">
        {
          data.stats.map((stat) => (
            <li class="flex flex-col text-center gap-2">
              <span class="text-5xl sm:text-7xl font-heading">{stat.title}</span>
              <span class=" text-[#7F7F7F] ">{stat.description}</span>
            </li>
          ))
        }
      </ul>
    </div>
    <a class="hidden sm:inline-flex group mt-8" href="https://terraregia.com/" target="_blank">
      <Button
        className="bg-[#D9D9D9] text-black group-hover:text-white group-hover:bg-black text-base font-medium">
        Conoce más de Terra Regia
      </Button>
      <Button size={'icon'} className="bg-[#D9D9D9]  group-hover:bg-black">
        <ArrowUpRight className="text-black group-hover:text-white " />
      </Button>
    </a>
  </div>
</section>
