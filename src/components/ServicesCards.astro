---
import { Icon } from "astro-icon/components";
import { Dot } from 'lucide-react';

interface Service {
  schools: string[]; 
  hospitals: string[]; 
  stores: string[]; 
}

interface ServicesProps {
  services: Service[]
}
const {services} = Astro.props

---

<div class="grid sm:grid-cols-3 gap-x-8 gap-y-4">
  {services.map((service : any, idx: number ) =>  (  
    <div class="flex flex-col items-center justify-center space-y-6 p-8  bg-black text-white rounded-md shadow-sm min-h-72">      
        <Icon name={service.icon} class="shrink-0  w-12 h-12 sm:w-16 sm:h-16 "/>
        <div class="flex flex-col sm:flex-1">  
          <h3 class="text-2xl font-medium text-center">{service.title}</h3>    
          <ul class="mt-4 text-center">
            {service.items.map((item: any) => (
              <li class="text-center text-neutral-300 leading-7">                                
                {item}
              </li>
            ))}
          </ul>
        </div>           
    </div>
  ))}
</div>

