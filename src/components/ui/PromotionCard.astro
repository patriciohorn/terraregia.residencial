---
import { Image } from "astro:assets"
const {project} = Astro.props

---


<article class="rounded-md overflow-hidden bg-white shadow-sm group hover:shadow-md transition-shadow duration-500 ease-out cursor-pointer"  style={{
  border: `1.5px solid ${project.color}`,  
}}>
  <div class="p-6" >
    <h3 class="text-2xl font-heading tracking-[0.01em]">{project.title}</h3>
  </div>
  <div class="aspect-video overflow-hidden">
    <Image src={project.images} alt={`Imagen de proyecto ${project.title}`} class="w-full h-full object-cover transition-transform duration-500 ease-out group-hover:transform group-hover:translate3d(0, 0, 0) group-hover:scale-105 group-hover:rotateX(0deg) group-hover:rotateY(0deg)"/>
  </div>
  <div class="p-6 space-y-4">
    <p class="font-medium text-lg leading-6 h-12">{project.mainPromotion}</p>
    <p class="text-neutral-600 ">{project.details}</p>
  </div>
</article>