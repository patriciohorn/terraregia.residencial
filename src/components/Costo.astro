---
import {Link} from '@/components/link'
import {cn, formatCurrency, sluglify} from '@/pages/lib/utils'
const {name = "Infonavit",  activeCategory} = Astro.props
const currentPath = Astro.url.pathname
const unsluglifyNameCategory = formatCurrency(name)
const isActive = activeCategory?.toLowerCase() === unsluglifyNameCategory || (currentPath === '/costo' && name === 'Infonavit')

---


<Link href={name === 'Infonavit' ? '/costo' : sluglify(`/costo/${unsluglifyNameCategory}`)} variant="invertedOutline" className={cn(`w-44 border border-white bg-transparent text-white`, isActive && `bg-white text-black border border-white`)}>{name !== '$3,000,000' ? name : '$3,000,000 o m√°s'}</Link>