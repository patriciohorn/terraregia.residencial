---
import {Image} from 'astro:assets'
import logoCloud1 from '@/assets/tr-cloud-1.svg';
import logoCloud2 from '@/assets/tr-cloud-2.svg';
import logoCloud3 from '@/assets/tr-cloud-3.svg';
import logoCloud4 from '@/assets/tr-cloud-4.svg';

const logoCloudImages = [logoCloud1, logoCloud2, logoCloud4, logoCloud3];
---


<div class="container">
  <div class="bg-[#252323] py-[72px] rounded-lg">
    <div class="flex items-center justify-around px-24">
      {logoCloudImages.map((logo, idx) => (
       <div class="">
        <Image src={logo} alt={`logo ${idx}`} class="w-full h-full object-cover"/>
       </div>
      ))}
    </div>
  </div>
</div>
</section>