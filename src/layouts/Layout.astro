---
import '../../styles/globals.css';
import { ViewTransitions } from 'astro:transitions';

import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
interface Props {
  title: string;
  whatsapp?: string;
}

const { title, whatsapp } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="es-MX">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Encuentra tu espacio ideal para vivir. En ubicaciones con plusvalía en Nuevo León"
    />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon-16x16.png"
    />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>

    <!-- ViewTransitions  -->
    <ViewTransitions />
  </head>
  <body class="overflow-x-hidden bg-[#F5F5F5]">
    <Header currentPath={currentPath} whatsapp={whatsapp} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<script
  data-goatcounter="https://patohorn.goatcounter.com/count"
  async
  src="//gc.zgo.at/count.js"></script>
