---
import { ModelosTabs } from '@/components/modelos-tab';
import { storyblokEditable } from '@storyblok/astro';
const { blok } = Astro.props;
console.log(blok.modelos_casas);
---

<div
  {...storyblokEditable(blok)}
  class="grid sm:grid-cols-[2fr_1.5fr] mt-[72px] sm:gap-x-12 gap-y-12 bg-white p-6 rounded-md border border-neutral-200">
  <!-- Tipologia  -->
  <h2 class="text-2xl sm:text-[40px] text-black font-medium">
    {blok.titulo}
  </h2>
  <ModelosTabs data={blok.modelos_casas} />
</div>
