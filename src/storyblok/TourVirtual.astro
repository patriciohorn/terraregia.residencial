---
import { storyblokEditable } from '@storyblok/astro';
const { blok } = Astro.props;
---

<section {...storyblokEditable(blok)} class="pt-12">
  <div class="container">
    <div
      class="grid sm:grid-cols-3 gap-y-4 gap-x-6 bg-white rounded-md py-12 px-8 shadow-sm">
      <div class="pr-14">
        <h2 class="relative text-3xl sm:text-5xl font-heading mb-6">
          {blok.titulo}
        </h2>
        <p class="text-neutral-600 text-lg">
          Explora nuestra casa muestra en 360Â° y descubre cada detalle
          de nuestro proyecto
        </p>
      </div>
      <div
        class="overflow-hidden rounded-[12px] aspect-[3/2] col-span-2">
        <iframe
          width="100%"
          height="600"
          allowfullscreen="true"
          src={blok.url}
          class="w-full h-full object-cover">
        </iframe>
      </div>
    </div>
  </div>
</section>
