---
import { Image } from 'astro:assets';
const { blok } = Astro.props;
---

<section class="py-12 sm:py-16">
  <div class="container">
    <div class="flex flex-col gap-9">
      <h1
        class="text-3xl sm:text-6xl leding-[1.1] text-black font-heading">
        {blok.titulo}
      </h1>
      <p class="text-lg sm:text-[28px] sm:leading-9 text-neutral-700">
        {blok.subtitulo}
      </p>
    </div>
    <div
      class="mt-8 overflow-hidden rounded-[15px] sm:rounded-md shadow-sm aspect-video">
      <Image
        src={blok.imagen_hero.filename}
        alt={blok.imagen_hero.alt ||
          'Proyecto Terra Regia Residencial'}
        format="webp"
        inferSize
        class="w-full h-full object-cover"
      />
    </div>
  </div>
</section>
