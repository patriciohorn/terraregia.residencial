---
import { storyblokEditable } from '@storyblok/astro';
import { Image } from 'astro:assets';
import { DropdownNav } from '@/components/dropdown-nav';
import { DropdownNavMobile } from '@/components/dropdown-nav-mobile';

const { blok } = Astro.props;
---

<section {...storyblokEditable(blok)}>
  <div class="container pt-16 pb-12 sm:pt-28 sm:pb-20">
    <div>
      <h1
        class="font-heading tracking-tight text-balance max-w-[50rem] text-[40px] sm:text-[80px] leading-[1.1] sm:leading-[1] text-neutral-950">
        {blok.titulo}
      </h1>
      <p class="mt-5 sm:mt-6 text-lg sm:text-xl max-w-[35em]">
        {blok.subtitulo}
      </p>
      <div
        class="relative mt-12 sm:mt-20 rounded-md sm:rounded-lg overflow-hidden shadow-sm aspect-[3/2] sm:aspect-video">
        <Image
          src={blok.imagen_hero.filename}
          alt={blok.imagen_hero.alt}
          format="webp"
          width="1228"
          height="691"
          class="w-full h-full object-cover"
          loading="eager"
        />

        <div
          class="hidden sm:absolute sm:top-6 sm:right-6 sm:flex sm:items-center sm:justify-center">
          <DropdownNav client:visible />
        </div>
        <div class="sm:hidden absolute top-2 left-2 right-2">
          <DropdownNavMobile client:visible />
        </div>
      </div>
    </div>
  </div>
</section>
