---
import { storyblokEditable } from '@storyblok/js';
import { Image } from 'astro:assets';
const { blok } = Astro.props;
---

<li {...storyblokEditable(blok)} class="flex items-center gap-2">
  <Image
    class="w-8 h-8 sm:h-10 sm:w-10 text-white inline-flex items-center justify-center"
    src={blok.icono.filename}
    alt=""
    width="40"
    height="40"
  />
  <span class="text-sm sm:text-base text-white">
    {blok.amenidad}
  </span>
</li>
